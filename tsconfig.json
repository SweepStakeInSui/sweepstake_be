{
	"compilerOptions": {
		"module": "commonjs",
		"declaration": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"target": "ESNext",
		"sourceMap": true,
		"outDir": "./dist",
		"baseUrl": "./src",
		"incremental": true,
		"allowJs": true,
		"resolveJsonModule": true,
		"paths": {
			"@config/*": ["config/*"],
			"@constants/*": ["constants/*"],
			"@models/*": ["models/*"],
			"@repo/*": ["repositories/*"],
			"@shared/*": ["shared/*"],
			"@modules/*": ["modules/*"],
			"@tests/*": ["tests/*"],
			"@lib/*": ["lib/*"],
		},
		"esModuleInterop": true,
		"skipLibCheck": true,
	},
	"include": ["src/**/*", "eslint.config.mjs"],
	"exclude": ["node_modules", "dist"],
	"files": [
		"node_modules/jest-extended/types/index.d.ts"
	]
}
